<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_member_3_items_image"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_person_gray_24dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/add_member_3_items_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_member_3_items_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:fontFamily="sans-serif"

            android:letterSpacing="0.01"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            android:textStyle="normal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/add_member_3_items_image"
            app:layout_constraintRight_toLeftOf="@id/cb_add_member_3"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_add_member_3"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>